<%= render 'friends/lookup' %>

<% if @friendships.size > 0 %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th colspan="3" class="page-header">
          <h3>My Friends</h3>
        </th>
      </tr>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @friendships.each do |friend| %>
        <tr>
          <td><%= friend.full_name %></td>
          <td><%= friend.email %></td>
          <td><%= link_to "View Profile", user_path(friend), class: "btn btn-xs btn-primary" %></td>
          <td><%= link_to "Remove Friend", friendship_path(friend),
            :method => :delete,
            :data => {:confirm => "Are you sure?"},
            :class => "btn btn-xs btn-danger" %>
          </td>
        </tr>
      <% end %>
  </table>

<% else %>
  <div class="row col-lg-12">
    <p class="lead">You don't have any friends yet. You should add some.</p>
  </div>
<% end %>  